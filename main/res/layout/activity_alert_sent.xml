<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center">

        <!-- Success Icon -->
        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="âœ…"
            android:textSize="80sp"
            android:gravity="center"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alert Sent Successfully!"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#4CAF50"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MDRRMO has been notified"
            android:textSize="14sp"
            android:textColor="#757575"
            android:layout_marginBottom="32dp" />

        <!-- Alert Details Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@android:color/white"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alert Details"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#424242"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="sans-serif-medium" />

                <!-- Emergency Type -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Emergency Type:"
                        android:textSize="14sp"
                        android:textColor="#757575" />

                    <TextView
                        android:id="@+id/tvEmergencyType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Medical"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#424242" />
                </LinearLayout>

                <!-- Time Sent -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Time Sent:"
                        android:textSize="14sp"
                        android:textColor="#757575" />

                    <TextView
                        android:id="@+id/tvTimeSent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12:34 PM"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#424242" />
                </LinearLayout>

                <!-- User Name -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reporter:"
                        android:textSize="14sp"
                        android:textColor="#757575"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvUserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="John Doe"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#424242" />
                </LinearLayout>

                <!-- GPS Location -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GPS Location:"
                        android:textSize="14sp"
                        android:textColor="#757575"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvGPSLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8.4542, 124.6319"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#424242"
                        android:fontFamily="monospace" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- View on Map Button -->
        <Button
            android:id="@+id/btnViewOnMap"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="VIEW LOCATION ON MAP"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="#2196F3"
            android:textColor="@android:color/white"
            app:cornerRadius="28dp"
            android:elevation="2dp"
            android:layout_marginBottom="12dp"
            app:icon="@android:drawable/ic_dialog_map"
            app:iconGravity="textStart"
            app:iconPadding="8dp" />

        <!-- Back to Dashboard Button -->
        <Button
            android:id="@+id/btnBackToDashboard"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="BACK TO DASHBOARD"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="#4CAF50"
            android:textColor="@android:color/white"
            app:cornerRadius="28dp"
            android:elevation="2dp"
            android:layout_marginBottom="24dp" />

        <!-- Info Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MDRRMO will contact you shortly"
            android:textSize="12sp"
            android:textColor="#757575"
            android:gravity="center"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView>