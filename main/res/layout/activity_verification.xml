<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center">

        <!-- Verification Icon -->
        <TextView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="ðŸ“±"
            android:textSize="60sp"
            android:gravity="center"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verification Code"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvMobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Code sent to +63 XXX XXX XXXX"
            android:textSize="14sp"
            android:textColor="#757575"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Code expires in 10:00"
            android:textSize="12sp"
            android:textColor="#F57C00"
            android:layout_marginBottom="32dp" />

        <!-- Code Input Fields -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="32dp">

            <EditText
                android:id="@+id/etCode1"
                android:layout_width="48dp"
                android:layout_height="56dp"
                android:layout_margin="4dp"
                android:background="@drawable/edit_text_background"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#212121" />

            <EditText
                android:id="@+id/etCode2"
                android:layout_width="48dp"
                android:layout_height="56dp"
                android:layout_margin="4dp"
                android:background="@drawable/edit_text_background"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#212121" />

            <EditText
                android:id="@+id/etCode3"
                android:layout_width="48dp"
                android:layout_height="56dp"
                android:layout_margin="4dp"
                android:background="@drawable/edit_text_background"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#212121" />

            <EditText
                android:id="@+id/etCode4"
                android:layout_width="48dp"
                android:layout_height="56dp"
                android:layout_margin="4dp"
                android:background="@drawable/edit_text_background"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#212121" />

            <EditText
                android:id="@+id/etCode5"
                android:layout_width="48dp"
                android:layout_height="56dp"
                android:layout_margin="4dp"
                android:background="@drawable/edit_text_background"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#212121" />

            <EditText
                android:id="@+id/etCode6"
                android:layout_width="48dp"
                android:layout_height="56dp"
                android:layout_margin="4dp"
                android:background="@drawable/edit_text_background"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#212121" />
        </LinearLayout>

        <!-- Verify Button -->
        <Button
            android:id="@+id/btnVerify"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="VERIFY"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="#2196F3"
            android:textColor="@android:color/white"
            app:cornerRadius="28dp"
            android:elevation="2dp"
            android:layout_marginBottom="16dp" />

        <!-- Resend Button -->
        <Button
            android:id="@+id/btnResend"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="RESEND CODE"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="#757575"
            android:textColor="@android:color/white"
            app:cornerRadius="28dp"
            android:elevation="2dp" />

    </LinearLayout>
</ScrollView>