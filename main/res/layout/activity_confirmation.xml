<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_gradient"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Warning Icon -->
        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="⚠️"
            android:textSize="80sp"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Emergency Type Display (ADDED) -->
        <TextView
            android:id="@+id/tvEmergencyType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Emergency Type"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#1565C0"
            android:layout_marginBottom="16dp"
            android:fontFamily="sans-serif-medium" />

        <!-- Title Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#FF5722"
            android:layout_marginBottom="32dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SENDING ALERT"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:padding="20dp"
                android:fontFamily="sans-serif-medium" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alert will be sent in"
            android:textSize="18sp"
            android:textColor="#1565C0"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"
            android:fontFamily="sans-serif-light" />

        <!-- Countdown Circle -->
        <androidx.cardview.widget.CardView
            android:layout_width="240dp"
            android:layout_height="240dp"
            app:cardCornerRadius="120dp"
            app:cardElevation="12dp"
            app:cardBackgroundColor="@android:color/white"
            android:layout_marginBottom="32dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- Outer Ring -->
                <View
                    android:layout_width="240dp"
                    android:layout_height="240dp"
                    android:background="@drawable/countdown_ring" />

                <!-- Countdown Text -->
                <TextView
                    android:id="@+id/tvCountdown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="5"
                    android:textSize="100sp"
                    android:textStyle="bold"
                    android:textColor="#FF5722"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvCountdown"
                    android:layout_centerHorizontal="true"
                    android:text="seconds"
                    android:textSize="16sp"
                    android:textColor="#9E9E9E"
                    android:layout_marginTop="-20dp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!-- Cancel Button -->
        <Button
            android:id="@+id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="CANCEL ALERT"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="#607D8B"
            android:textColor="@android:color/white"
            app:cornerRadius="28dp"
            android:elevation="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Press cancel if this was a mistake"
            android:textSize="14sp"
            android:textColor="#64B5F6"
            android:fontFamily="sans-serif-light" />
    </LinearLayout>
</RelativeLayout>