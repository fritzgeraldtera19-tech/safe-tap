<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="24dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="System Diagnostics"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#1A1A1A"
                android:gravity="center"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Verify all permissions and services"
                android:textSize="14sp"
                android:textColor="#666666"
                android:gravity="center"/>
        </LinearLayout>

        <!-- Permission Status Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="20dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PERMISSIONS"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#999999"
                android:letterSpacing="0.1"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:id="@+id/tvPermissionStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Checking permissions..."
                android:textSize="14sp"
                android:textColor="#333333"
                android:lineSpacingExtra="4dp"/>
        </LinearLayout>

        <!-- Location Services Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="20dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LOCATION SERVICES"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#999999"
                android:letterSpacing="0.1"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:id="@+id/tvLocationServices"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Checking location services..."
                android:textSize="14sp"
                android:textColor="#333333"
                android:lineSpacingExtra="4dp"/>
        </LinearLayout>

        <!-- Device Info Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="20dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DEVICE INFORMATION"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#999999"
                android:letterSpacing="0.1"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:id="@+id/tvDeviceInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Loading device info..."
                android:textSize="14sp"
                android:textColor="#333333"
                android:lineSpacingExtra="4dp"/>
        </LinearLayout>

        <!-- User Info Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="20dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="USER INFORMATION"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#999999"
                android:letterSpacing="0.1"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:id="@+id/tvUserInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Loading user info..."
                android:textSize="14sp"
                android:textColor="#333333"
                android:lineSpacingExtra="4dp"/>
        </LinearLayout>

        <!-- Ready Status Card -->
        <LinearLayout
            android:id="@+id/layoutReadyStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background_success"
            android:padding="20dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:id="@+id/tvReadyStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Checking status..."
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:lineSpacingExtra="4dp"/>
        </LinearLayout>

        <!-- Refresh Button -->
        <Button
            android:id="@+id/btnRefreshPermissions"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Refresh Diagnostics"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@drawable/button_primary"
            android:textAllCaps="false"
            android:elevation="2dp"/>

    </LinearLayout>
</ScrollView>